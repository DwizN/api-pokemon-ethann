generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Type {
  id   Int    @id @default(autoincrement())
  name String @unique

  Pokemon PokemonCard[] // Relation avec la table Pokémon
}

model PokemonCard {
  id Int @id @default(autoincrement()) // Identifiant unique de la carte
  name String @unique // Nom du Pokémon
  pokedexId Int @unique // Identifiant du pokémon dans le pokédex
  typeIds Type[] // Type du Pokémon (relation 1-N)
  lifePoints Int // Points de vie
  size Float? // Taille
  weight Float? // Poids
  imageUrl String? // Url de l'image du Pokémon
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}



